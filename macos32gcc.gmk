version=091224b
VERSION=$(shell grep -e '^version=' macos32gcc.gmk | sed 's/version=//')
CC=gcc-11
MAKE=/usr/local/opt/make/libexec/gnubin/make
KERNEL=$(shell uname -r | grep -oE '^[0-9]+')
OS="14"
ifeq($(KERNEL),21)
  OS="12"
else ifeq($(KERNEL),22)
  OS="13"
else
  OS="14"
endif  

bfs/bin:
	cd bfs && $(MAKE) CC=$(CC)

mec: 
	cd src && $(MAKE) -f macos32gcc.gmk CC=$(CC) BTYP=c

mew: 
	cd src && $(MAKE) -f macos32gcc.gmk CC=$(CC) BTYP=cw

mecb: mec bfs/bin
	./bfs/bfs -a ./src/.macos32gcc-release-mec/mec -o mecb-macos-$(OS)-$(VERSION).bin ./jasspa

mewb: mew bfs/bin
	./bfs/bfs -a ./src/.macos32gcc-release-mecw/mecw -o mewb-macos-$(OS)-$(VERSION).bin ./jasspa
