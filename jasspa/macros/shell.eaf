 "" "<FOLD+> \ecCBash Constructs:\ecA"
case "case $\pvar in\r    1) echo 'value is one' ;;\r2) echo 'value is two' ;;\r*) echo 'other value' ;;\r\B\B\B\Besac\r\P" "  case"
if "if [[ \p ]] ; then\r  ;\r\B\Bfi\r\P" "  if"
ef "elif [[ \p ]] ; then\r\P" "  ef (elif)"
el "else\r  \p" "  el (else)"  
