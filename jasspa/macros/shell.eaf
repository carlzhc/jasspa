ifz "if [[ -z $1 ]]; then\r  echo \"Usage: \p\"\rreturn\r\B\Bfi\r" "  ifz (check $1)"
arr "arr=(\pval1 val2)\P" "  arr(ay)"
dic "declare -A \pdict\rdict[\"key\"]=\"value\"\r\P" "  dic(t)"
